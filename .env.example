# Google APIs
# Required for Google Geocoding (forest geocoding) and Google Routes (driving distance/time).
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Optional cache overrides
COORDINATE_CACHE_DB=data/cache/coordinates.sqlite
ROUTE_CACHE_DB=data/cache/routes.sqlite

# Optional geocoding behavior
GEOCODE_MAX_NEW_PER_REQUEST=25
GEOCODE_DELAY_MS=1200
GEOCODE_TIMEOUT_MS=15000
GEOCODE_RETRY_ATTEMPTS=3
GEOCODE_RETRY_BASE_DELAY_MS=750
NOMINATIM_LOCAL_DELAY_MS=200
NOMINATIM_LOCAL_429_RETRIES=4
NOMINATIM_LOCAL_429_RETRY_DELAY_MS=1500
# Optional local Nominatim endpoint override (defaults to http://localhost:${NOMINATIM_PORT})
# NOMINATIM_BASE_URL=http://localhost:8080
NOMINATIM_AUTO_START=1
NOMINATIM_PORT=8080
NOMINATIM_GUNICORN_WORKERS=8
NOMINATIM_DNS_SERVERS=1.1.1.1,8.8.8.8
# Optional overrides for npm run dev auto-start
# NOMINATIM_IMAGE=mediagis/nominatim:4.5
# NOMINATIM_PBF_URL=https://download.geofabrik.de/australia-oceania/australia-latest.osm.pbf

# Optional routes behavior
ROUTE_MAX_CONCURRENT_REQUESTS=8
