{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react-jsx",
    "module": "preserve",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["node", "vite/client"]
  },
  "include": [
    "web/**/*.ts",
    "web/**/*.tsx",
    "pipeline/**/*.ts",
    "shared/**/*.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "playwright.config.ts"
  ]
}
